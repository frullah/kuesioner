<div class="container mx-auto" style="max-width: 640px">
  <% if notice -%>
    <div class="alert alert-info" id="notice"><%= notice %></div>
  <% end %>

  <h1 class="mb-4">Lihat Data Kategori Kuesioner</h1>

  <p class="py-2">
    <strong>Nama:</strong>
    <%= @kategori_kuesioner.nama %>
  </p>

  <div class="mt-4">
    <%= link_to kategori_kuesioners_path, class: "btn btn-primary" do %>
      <i class="fas fa-arrow-left"></i> Kembali
    <% end %>
    <%= link_to edit_kategori_kuesioner_path(@kategori_kuesioner), class: "btn btn-primary" do %>
      <i class="fas fa-pencil-alt"></i> Ubah
    <% end %>
  </div>
</div>