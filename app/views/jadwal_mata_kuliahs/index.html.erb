<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Jadwal Mata Kuliah</h1>

  <%= link_to 'Tambah Jadwal Mata Kuliah', new_jadwal_mata_kuliah_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
          <th class="border p-2 text-left">Kelas</th>
          <th class="border p-2 text-left">Tahun akademik</th>
          <th class="border p-2 text-left">Mata kuliah</th>
          <th class="border p-2 text-left">Dosen</th>
          <th class="border p-2 text-left">Hari</th>
          <th class="border p-2 text-left">Waktu</th>
  
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @jadwal_mata_kuliahs.each do |jadwal_mata_kuliah| %>
        <tr class="group hover:bg-gray-100">
          <td class="p-3 border"><%= jadwal_mata_kuliah.kelas.nama %></td>
          <td class="p-3 border"><%= jadwal_mata_kuliah.tahun_akademik.display_name %></td>
          <td class="p-3 border"><%= jadwal_mata_kuliah.mata_kuliah.nama %></td>
          <td class="p-3 border"><%= jadwal_mata_kuliah.dosen.nama %></td>
          <td class="p-3 border"><%= jadwal_mata_kuliah.hari %></td>
          <td class="p-3 border"><%= l jadwal_mata_kuliah.waktu, format: "%R" %></td>
  
          <td class="border px-2 whitespace-nowrap w-1">
            <%= link_to jadwal_mata_kuliah, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_jadwal_mata_kuliah_path(jadwal_mata_kuliah), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to jadwal_mata_kuliah, method: :delete, data: { confirm: 'Hapus Jadwal Mata Kuliah ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @jadwal_mata_kuliahs, class: "mt-2" %>
</div>
