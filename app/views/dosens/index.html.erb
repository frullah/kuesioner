<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Dosen</h1>

  <%= link_to 'Tambah Dosen', new_dosen_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
        <th class="border p-2 text-left">Nidn</th>
        <th class="border p-2 text-left">Nama</th>
        <th class="border p-2 text-left">Pendidikan</th>
  
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @dosens.each do |dosen| %>
        <tr class="group hover:bg-gray-100">
            <td class="p-3 border"><%= dosen.nidn %></td>
            <td class="p-3 border"><%= dosen.nama %></td>
          <td class="p-3 border"><%= dosen.pendidikan %></td>
  
          <td class="border px-2 w-1 whitespace-nowrap">
            <%= link_to dosen, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_dosen_path(dosen), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to dosen, method: :delete, data: { confirm: 'Hapus Dosen ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @dosens, class: "mt-2" %>
</div>
