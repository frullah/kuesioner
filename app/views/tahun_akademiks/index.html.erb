<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Tahun Akademik</h1>

  <%= link_to 'Tambah Tahun Akademik', new_tahun_akademik_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
          <th class="border p-2 text-left">Tahun</th>
          <th class="border p-2 text-left">Semester</th>
  
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @tahun_akademiks.each do |tahun_akademik| %>
        <tr class="group hover:bg-gray-100">
            <td class="p-3 border"><%= tahun_akademik.tahun %></td>
            <td class="p-3 border"><%= tahun_akademik.semester %></td>
  
          <td class="border px-2 w-1 whitespace-nowrap">
            <%= link_to tahun_akademik, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_tahun_akademik_path(tahun_akademik), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to tahun_akademik, method: :delete, data: { confirm: 'Hapus Tahun Akademik ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @tahun_akademiks, class: "mt-2" %>
</div>
