<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Prodi</h1>

  <%= link_to 'Tambah Prodi', new_prodi_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
        <th class="border p-2 text-left">Nama</th>
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @prodis.each do |prodi| %>
        <tr class="group border-t border-gray-400 hover:bg-gray-100">
          <td class="p-3 border"><%= prodi.nama %></td>
  
          <td class="border px-2 w-1 whitespace-nowrap">
            <%= link_to prodi, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_prodi_path(prodi), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to prodi, method: :delete, data: { confirm: 'Hapus Prodi ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @prodis, class: "mt-2" %>
</div>
