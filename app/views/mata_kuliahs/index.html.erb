<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Mata Kuliah</h1>

  <%= link_to 'Tambah Mata Kuliah', new_mata_kuliah_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
          <th class="border p-2 text-left">Nama</th>
          <th class="border p-2 text-left">Sks</th>
          <th class="border p-2 text-left w-1 whitespace-nowrap">Semester</th>
  
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @mata_kuliahs.each do |mata_kuliah| %>
        <tr class="group hover:bg-gray-100">
            <td class="p-3 border"><%= mata_kuliah.nama %></td>
            <td class="p-3 border"><%= mata_kuliah.sks %></td>
            <td class="p-3 border"><%= mata_kuliah.semester %></td>
  
          <td class="border px-2 w-1 whitespace-nowrap">
            <%= link_to mata_kuliah, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_mata_kuliah_path(mata_kuliah), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to mata_kuliah, method: :delete, data: { confirm: 'Hapus Mata Kuliah ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @mata_kuliahs, class: "mt-2" %>
</div>
