<div class="container mx-auto" style="max-width: 640px">
  <% if notice -%>
    <div class="alert alert-info" id="notice"><%= notice %></div>
  <% end %>

  <h1 class="mb-4">Lihat Data Item Kuesioner</h1>

  <p class="py-2">
    <strong>Kategori kuesioner:</strong>
    <%= @item_kuesioner.kategori_kuesioner.nama %>
  </p>

  <p class="py-2">
    <strong>pertanyaan:</strong>
    <%= @item_kuesioner.pertanyaan %>
  </p>

  <div class="mt-4">
    <%= link_to item_kuesioners_path, class: "btn btn-primary" do %>
      <i class="fas fa-arrow-left"></i> Kembali
    <% end %>
    <%= link_to edit_item_kuesioner_path(@item_kuesioner), class: "btn btn-primary" do %>
      <i class="fas fa-pencil-alt"></i> Ubah
    <% end %>
  </div>
</div>