<div class="container max-w-full">
<% if notice -%>
  <div class="alert alert-info" id="notice"><%= notice %></div>
<% end %>

  <h1 class="mb-4">Data Item Kuesioner</h1>

  <%= link_to 'Tambah Item Kuesioner', new_item_kuesioner_path, class: "btn btn-primary mb-4" %>

  <table class="table bg-white w-full">
    <thead>
      <tr>
          <th class="border p-2 text-left">Kategori kuesioner</th>
          <th class="border p-2 text-left">pertanyaan</th>
  
        <th class="border p-2 text-left w-1 whitespace-nowrap">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @item_kuesioners.each do |item_kuesioner| %>
        <tr class="group hover:bg-gray-100">
            <td class="p-3 border"><%= item_kuesioner.kategori_kuesioner.nama %></td>
            <td class="p-3 border"><%= item_kuesioner.pertanyaan %></td>
  
          <td class="border px-2 w-1 whitespace-nowrap">
            <%= link_to item_kuesioner, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_item_kuesioner_path(item_kuesioner), class: "btn btn-primary mx-0.5" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            
            <%= link_to item_kuesioner, method: :delete, data: { confirm: 'Hapus Jadwal Mata Kuliah ?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @item_kuesioners, class: "mt-2" %>
</div>
