<!DOCTYPE html>
<html>
  <head>
    <title>Kuesioner</title>
    <%= render "shared/head", cached: true %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="hold-transition layout-fixed layout-navbar-fixed sidebar-closed">
    <div class="wrapper">
      <%= render "shared/header", cached: true %>
      <%= render "shared/sidebar", cached: true %>
      <div class="content-wrapper relative">

<% if flash[:error] -%>
      <div id="app-toast" class="toast fade absolute bottom-0 left-0 ml-2" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-body bg-gray-700 text-white">
          <i class="fas fa-exclamation-circle fill-current text-red-300"></i>
          <%= flash[:error] %>
        </div>
      </div>
<% end -%>
        <%= yield %>
      </div>
    <div>
  </body>
</html>
